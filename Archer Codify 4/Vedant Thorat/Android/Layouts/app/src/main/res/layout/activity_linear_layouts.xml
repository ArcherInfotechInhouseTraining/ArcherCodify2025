<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LinearLayouts">

    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@color/ic_launcher_new_background"
        android:text="@string/linear_layout"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="35sp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="50dp"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="150dp"
        android:background="@color/blue"
        android:src="@drawable/logo5"
        android:text="@string/image"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textColor="@color/ic_launcher_new_background"
        android:textSize="25sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/input1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="60dp"
        android:background="@color/design_default_color_primary_variant"
        android:text="@string/input_1"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"

        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/input2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="20dp"

        android:background="@color/design_default_color_primary_dark"
        android:text="@string/input_2"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="50dp"
        android:background="@color/ic_launcher_new_background"
        android:text="@string/button"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_secondary"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20sp"
        android:background="@color/ic_launcher_new_background"
        android:text="@string/horizontal_linear_layout"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_secondary"
        android:textSize="25sp"
        android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/login_page"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/login_page"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/login_page"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/login_page"/>
</LinearLayout>